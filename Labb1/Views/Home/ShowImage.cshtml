@model  MyDataForLabb1.Models.ModelGallery

@{
    ViewBag.Title = "ShowImage";
}

<h2>ShowImage</h2>

<img src="~/Images/@Model.Name" width="1000px"/>

@{
    var ajaxOptions = new AjaxOptions
    {
        HttpMethod = "POST"
    };
}

@using (Ajax.BeginForm("ShowImage", "Home", ajaxOptions))
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="text" name="ImageComment" id="ImageComment" />
        <input type="submit" value="Add" class="btn btn-default" /> |
        <br />

        <div id="aa"> 
            @foreach (var comment in Model.ImageComments)
            {
                @comment.CommentsImages<br />

            }
        </div>



    </div>

    <script>
var refreshId = setInterval(function()
{
    $('#aa').fadeIn("slow").load('ShowImage.cshtml').fadeOut("slow");
}, 800); 
         

    </script>
                }

